{
  "version": "1.0.1",
  "name": "nmsg",
  "description": "Interprocess messenger for Node.js",
  "main": "index.js",

  "keywords": [
    "nmsg",
    "node-messenger",
    "messenger",
    "ipc",
    "inter-process",
    "communication",
    "scoket",
    "websocket",
    "sockjs",
    "socket.io"
  ],

  "repository": {
    "type": "git",
    "url": "https://github.com/streamich/nmsg"
  },

  "scripts": {
